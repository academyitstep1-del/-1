# –ö–ª–∞—Å —Å–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫–∞
class Employee:
    def __init__(self, name, position, salary):
        self.name = name
        self.position = position
        self.salary = salary

    def get_info(self):
        return f"{self.name} ‚Äî {self.position}, –ó–∞—Ä–ø–ª–∞—Ç–∞: {self.salary} –≥—Ä–Ω"


# –ö–ª–∞—Å –≤—ñ–¥–¥—ñ–ª—É
class Department:
    def __init__(self, name):
        self.name = name
        self.employees = []

    def add_employee(self, employee):
        self.employees.append(employee)
        print(f"‚úÖ –°–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫–∞ {employee.name} –¥–æ–¥–∞–Ω–æ —É –≤—ñ–¥–¥—ñ–ª {self.name}")

    def remove_employee(self, name):
        for emp in self.employees:
            if emp.name == name:
                self.employees.remove(emp)
                print(f"‚ùå –°–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫–∞ {name} –≤–∏–¥–∞–ª–µ–Ω–æ –∑ –≤—ñ–¥–¥—ñ–ª—É {self.name}")
                return
        print(f"‚ö†Ô∏è –°–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫–∞ –∑ —ñ–º'—è–º {name} –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ")

    def get_total_salary(self):
        total = sum(emp.salary for emp in self.employees)
        return total

    def show_all_employees(self):
        if not self.employees:
            print("üì≠ –£ –≤—ñ–¥–¥—ñ–ª—ñ –Ω–µ–º–∞—î —Å–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫—ñ–≤.")
        else:
            print(f"üë• –°–ø–∏—Å–æ–∫ —Å–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫—ñ–≤ —É –≤—ñ–¥–¥—ñ–ª—ñ {self.name}:")
            for emp in self.employees:
                print(" -", emp.get_info())


# ====== –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ —Ä–æ–±–æ—Ç–∏ ======
if __name__ == "__main__":
    # –°—Ç–≤–æ—Ä—é—î–º–æ –∫—ñ–ª—å–∫–∞ —Å–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫—ñ–≤
    emp1 = Employee("–Ü–≤–∞–Ω –ü–µ—Ç—Ä–µ–Ω–∫–æ", "–ú–µ–Ω–µ–¥–∂–µ—Ä", 25000)
    emp2 = Employee("–û–∫—Å–∞–Ω–∞ –ö–æ–≤–∞–ª—å", "–ë—É—Ö–≥–∞–ª—Ç–µ—Ä", 22000)
    emp3 = Employee("–ü–µ—Ç—Ä–æ –Ü–≤–∞–Ω–æ–≤", "–Ü–Ω–∂–µ–Ω–µ—Ä", 28000)

    # –°—Ç–≤–æ—Ä—é—î–º–æ –≤—ñ–¥–¥—ñ–ª
    dept = Department("–ê–¥–º—ñ–Ω—ñ—Å—Ç—Ä–∞—Ü—ñ—è")

    # –î–æ–¥–∞—î–º–æ —Å–ø—ñ–≤—Ä–æ–±—ñ—Ç–Ω–∏–∫—ñ–≤
    dept.add_employee(emp1)
    dept.add_employee(emp2)
    dept.add_employee(emp3)

    # –í–∏–≤–æ–¥–∏–º–æ —Å–ø–∏—Å–æ–∫
    dept.show_all_employees()

    # –ü—ñ–¥—Ä–∞—Ö–æ–≤—É—î–º–æ —Å—É–º—É –∑–∞—Ä–ø–ª–∞—Ç
    print(f"\nüí∞ –ó–∞–≥–∞–ª—å–Ω–∞ –∑–∞—Ä–ø–ª–∞—Ç–∞ –≤—ñ–¥–¥—ñ–ª—É: {dept.get_total_salary()} –≥—Ä–Ω")

    # –í–∏–¥–∞–ª—è—î–º–æ –æ–¥–Ω–æ–≥–æ –ø—Ä–∞—Ü—ñ–≤–Ω–∏–∫–∞
    dept.remove_employee("–û–∫—Å–∞–Ω–∞ –ö–æ–≤–∞–ª—å")

    # –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ –∑–Ω–æ–≤—É
    dept.show_all_employees()
    print(f"\nüí∞ –ü—ñ—Å–ª—è –≤–∏–¥–∞–ª–µ–Ω–Ω—è –∑–∞–≥–∞–ª—å–Ω–∞ –∑–∞—Ä–ø–ª–∞—Ç–∞: {dept.get_total_salary()} –≥—Ä–Ω")
